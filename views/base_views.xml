<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <menuitem
            id="cs_menu_root"
            name="CRM"
            web_icon="crm,static/description/icon.png"
            groups="sales_team.group_sale_salesman,sales_team.group_sale_manager"
            sequence="6"/>

        <template id="assets_backend" name="cs assets_backend" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/cs_base/static/src/css/cs_backend.css"/>
            </xpath>
            <xpath expr="//script[last()]" position="after">
                <script type="text/javascript" src="/cs_base/static/src/js/cs_dashboard.js"></script>
            </xpath>
        </template>

    <record id="cs_base_dashboard_action" model="ir.actions.client">
        <field name="name">面板</field>
        <field name="tag">cs_base_dashboard</field>
    </record>
    <menuitem name="面板" id="cs_base_dashboard_menu" action="cs_base_dashboard_action" parent="cs_menu_root" sequence="-1"/>

</odoo>
